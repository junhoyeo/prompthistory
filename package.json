{
  "name": "@junhoyeo/prompthistory",
  "version": "1.0.0",
  "description": "CLI tool to search and navigate OpenCode prompt history",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "prompthistory": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "bun run src/index.ts",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "cli",
    "opencode",
    "history",
    "prompt",
    "search",
    "fuzzy-search",
    "testing",
    "replay",
    "llm"
  ],
  "author": "junhoyeo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/junhoyeo/prompthistory.git"
  },
  "homepage": "https://github.com/junhoyeo/prompthistory#readme",
  "bugs": {
    "url": "https://github.com/junhoyeo/prompthistory/issues"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.0",
    "@inquirer/prompts": "^8.2.0",
    "chalk": "^5.4.1",
    "cli-table3": "^0.6.5",
    "clipboardy": "^5.0.2",
    "commander": "^12.1.0",
    "date-fns": "^3.3.1",
    "fuse.js": "^7.0.0",
    "openai": "^4.73.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/bun": "^1.3.9",
    "@types/node": "^20.17.0",
    "@types/react": "^19.2.8",
    "tsup": "^8.4.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
